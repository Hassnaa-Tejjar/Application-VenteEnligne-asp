@model aspprojet.Models.message

@{
    ViewBag.Title = "contact";
    Layout = "~/Views/Shared/_Panier.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Contactez nous pour toutes questions ou problèmes</span></h2>
        </div>
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-5">
                <div class="contact-form">
                    <div id="success"></div>
                    <form name="sentMessage" id="contactForm" novalidate="novalidate">
                        <div class="control-group">
                            <div style="color:black;font-size:16px">@Html.DisplayName("Votre Nom:")</div>
                            <div class="form__input form-control" style="padding:10px">@Session["clientprenom"] @Session["clientnom"]</div>

                        </div>
                        <div class="control-group" style="margin-top:15px">

                            <div style="color:black;font-size:16px">@Html.DisplayName("Votre Email:")</div>
                            <div class="form__input form-control" style="padding:10px">
                                @Session["clientemail"]
                        </div>
                    </div>

                        <div class="control-group" style="margin-top:15px">
                            <div style="color:black;font-size:16px">@Html.DisplayName("Votre Message:")</div>
                            <div >@Html.TextBoxFor(model => model.message_client, htmlAttributes: new { @class = "form-control", @type = "textarea", @placeholder = "Message" })</div>
                            @Html.ValidationMessageFor(model => model.message_client, "", new { @class = "text-danger" })
                            <!--   <textarea class="form-control" rows="6" id="message" placeholder="Message"
              required="required"
              data-validation-required-message="Veuillez entrer votre message"></textarea>
    <p class="help-block text-danger"></p>-->
                        </div>
                        <div style="margin-top:15px">
                            <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">
                                Envoyer
                                Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-lg-5 mb-5">
                <h5 class="font-weight-semi-bold mb-3">Contactez nous</h5>
                <p>Vous avez des questions sur notre site? Vous trouvez des problèmes? Vous avez besoin d'aide? N'hésitez pas à nous envoyer un message. </p>
                <div class="d-flex flex-column mb-3">
                    <h5 class="font-weight-semi-bold mb-3">Contact 1</h5>
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>Rue Arabia 123, Rabat, Maroc</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>contact@clickTobuy.ma</p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3"></i>+212 345 67890</p>
                </div>
                <div class="d-flex flex-column">
                    <h5 class="font-weight-semi-bold mb-3">Contact 2</h5>
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>Rue Amal 45, Casablanca, Maroc</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>contact@clickTobuy.com</p>
                    <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>+212 349 66890</p>
                </div>
            </div>
        </div>
    </div>

      }
