@model aspprojet.Models.Gmail

@{
    ViewBag.Title = "Send";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <head>
        <meta charset="UTF-8">
        <title>Inscription</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/themelog/css/style.css">

    </head>
    <body>
        <!-- partial:index.partial.html -->

        <head>
            <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
            <meta charset="utf-8">
            <link rel="stylesheet" type="text/css" href="main.css">
            <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">
        </head>

        <body>
            <div class="main">
                <div class="container a-container" id="a-container" style="margin-left:-10px">
                    <form class="form" id="a-form" method="" action="">

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <table>
                                <tr>
                                    <h2 class="form_title title" style="margin-top:00px;margin-left:-300px">Nouveau message</h2>

                                </tr>
                                <tr>
                                    <div class="form-group" style="margin-left:-250px">
                                        @Html.TextBoxFor(model => model.To, htmlAttributes: new { @class = "form__input", @type = "text", @placeholder = "Destinataire" })
                                        <div class="col-md-10">
                                            @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </tr>
                                <tr>

                                    <div class="form-group" style="margin-left:-250px">
                                        @Html.TextBoxFor(model => model.Subject, htmlAttributes: new { @class = "form__input", @type = "text", @placeholder = "Objet" })
                                        <div class="col-md-10">

                                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </tr>
                                <tr>

                                    <div class="form-group" style="margin-left:-250px">
                                        @Html.TextBoxFor(model => model.Body, htmlAttributes: new { @class = "form__input", @type = "text", @placeholder = "Message" })
                                        <div class="col-md-10">

                                            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                                        </div>
                                    </div>



                                </tr>

                                <tr>
                                    <td>
                                    </td>
                                    <td></td>
                                </tr>

                            </table>
                            <script src="~/themelog/js/javascript.js"></script>



                        </div>
                        <div class="form-group" style="margin-left:-280px;margin-top:300px">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Ajouter" class="form__button button submit" />

                            </div>
                        </div>
                    </form>

                </div>

        </body>

    </body>
}
