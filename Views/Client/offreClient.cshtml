@model IEnumerable<aspprojet.Models.article>
@{
    ViewBag.Title = "offreClient";
    Layout = "~/Views/Shared/_dashClient.cshtml";
}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/themelog/css/Style1.css">
</head>

<div class="row">
    @foreach (var item in Model)
    {
       if(item.fk_offre!=null)
        {
            <div class="col-3  border-primary ">
                <div class="card mb-4" style="width: 200px;">
                    <div class="row g-0">

                        <div class="col-md-6">
                            <img src="@Url.Content(item.img_art)" width="200" height="190" />
                        </div>

                        <div class="col-md-12" style="height:60px">
                            <div class="card-footer " style="height:60px">
                                <p class="card-text"><b style="margin-left:-20px">Prix: </b> @Html.DisplayFor(modelItem => item.offre.prix_offre)</p>
                                <a style="margin-top:-44px;margin-right:-20px" class="float-right" asp-action="Details" asp-route-id="@item.Id" href="~/Prop/detailsArt/@item.Id">
                                    <img src="~/Image/det.png" width="30px" height="30px" style="margin-left:-25px;" />
                                    <img src="~/Image/new-offer.png" width="70px" height="50px" style="margin-top:-385px;margin-left:-200px" />
                                </a>
                                @if (Session["clientId"] != null)
                                {
                                    <a style="margin-top: -44px; margin-right: 10px" class="float-right" asp-action="Details" asp-route-id="@item.Id" href="~/Client/addPanier/@item.Id">

                                        <img src="~/Image/shopping-cart.png" width="25px" height="25px" />
                                    </a>
                                    <a style="margin-top:-44px;margin-right:35px" class="float-right" asp-action="Details" asp-route-id="@item.Id" href="~/Client/addfavoris/@item.Id">

                                        <img src="~/Theme/img/heart.png" width="23px" height="23px" />

                                    </a>
                                }
                                else
                                {

                                    <a href="~/Client/articleClient" style="margin-top:-44px;margin-right:10px" class="float-right" asp-action="Details" asp-route-id="@item.Id">

                                        <img src="~/Image/shopping-cart.png" width="25px" height="25px" />

                                    </a>

                                    <a href="~/Client/articleClient" style="margin-top:-44px;margin-right:35px" class="float-right" asp-action="Details" asp-route-id="@item.Id">

                                        <img src="~/Theme/img/heart.png" width="23px" height="23px" />

                                    </a>
                                }
                                <p class="" style="margin-top:-20px;font-size:12px;text-decoration:line-through;color:red"> @Html.DisplayFor(modelItem => item.prix)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }


</div>