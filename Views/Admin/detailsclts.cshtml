@model aspprojet.Models.client
@{
    ViewBag.Title = "detailsclts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <head>
        <meta charset="UTF-8">
        <title>Informations du Client</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/themelog/css/style.css">

    </head>
    <body>
        <head>
            <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
            <meta charset="utf-8">
            <link rel="stylesheet" type="text/css" href="main.css">
            <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">
        </head>
        <body>
            <div class="main">

                <div class="container a-container" id="a-container" style="margin-left:-10px">
                    <form class="form" id="a-form" method="" action="">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <table style="margin-right:350px">
                                <tr>
                                    <h2 class="form_title title" style="margin-top:00px;margin-left:0px">Informations du client</h2>

                                </tr>
                                <tr>
                                    <td>
                                        <div style="color: black; font-size: 16px; padding-left: 30px">
                                            @Html.DisplayName("Nom")

                                        </div>
                                    </td>
                                    <td>
                                        <div style="color:black;font-size:16px;padding-left:50px">
                                            @Html.DisplayName("Prénom")

                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.nom)</div>

                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group mar">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.prenom)</div>

                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div style="color: black; font-size: 16px; padding-left: 30px">
                                            @Html.DisplayName("Age ")

                                        </div>
                                    </td>
                                    <td>
                                        <div style="color:black;font-size:16px;padding-left:50px">
                                            @Html.DisplayName("Téléphone")

                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.age)</div>

                                        </div>

                                    </td>
                                    <td>
                                        <div class="form-group mar">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.telephone)</div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div style="color: black; font-size: 16px; padding-left: 30px">
                                            @Html.DisplayName("Identifiant")

                                        </div>
                                    </td>
                                    <td>
                                        <div style="color:black;font-size:16px;padding-left:50px">
                                            @Html.DisplayName("CIN")

                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>

                                        <div class="form-group ">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.Id)</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group mar">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.cin)</div>
                                        </div>

                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div style="color: black; font-size: 16px; padding-left: 30px">
                                            @Html.DisplayName("Sexe")

                                        </div>
                                    </td>
                                    <td>
                                        <div style="color:black;font-size:16px;padding-left:50px">
                                            @Html.DisplayName("Adresse")

                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>

                                        <div class="form-group ">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.sexe)</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group mar">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.adresse)</div>
                                        </div>

                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div style="color: black; font-size: 16px; padding-left: 30px">
                                            @Html.DisplayName("Email")

                                        </div>
                                    </td>
                                    <td>
                                        <div style="color:black;font-size:16px;padding-left:50px">
                                            @Html.DisplayName("Mot de passe")

                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>

                                        <div class="form-group ">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.email)</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group mar">
                                            <div class="form__input" style="padding-top:10px">@Html.DisplayFor(model => model.password)</div>
                                        </div>

                                    </td>
                                </tr>

                            </table>
                            <script src="~/themelog/js/javascript.js"></script>
                            <div>
                                <div class="form-group" style="margin-left:100px">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button class="form__button button submit">@Html.ActionLink("Retour à la liste", "clients")</button>
                                        <br />

                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </form>

                </div>

            </div>
        </body>
    </body>
}



