                                                @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group mar">
                                            @Html.TextBoxFor(model => model.prenom, htmlAttributes: new { @class = "form__input", @type = "text", @placeholder = "Prénom" })
