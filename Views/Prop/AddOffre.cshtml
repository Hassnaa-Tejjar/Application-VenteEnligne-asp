@model aspprojet.Models.offre

@{
    ViewBag.Title = "AddOffre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddOffre", "Prop", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <head>
        <meta charset="UTF-8">
        <title>Ajout d'article</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/themelog/css/style.css">

    </head>
    <body>
        <!-- partial:index.partial.html -->

        <head>
            <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
            <meta charset="utf-8">
            <link rel="stylesheet" type="text/css" href="main.css">
            <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">
        </head>

        <body>
            <div class="main">
                <div class="container a-container" id="a-container" style="margin-left:-10px">
                    <form class="form" id="a-form" method="" action="">
                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <table>
                                <tr>
                                    <h2 class="form_title title" style="margin-top:00px;margin-left:47px">Ajouter une offre</h2>

                                </tr>
                                
                                <tr>
                                    <td>
                                        <div class="form-group marr">
                                            @Html.TextBoxFor(model => model.date_i, htmlAttributes: new { @class = "form__input ", @type = "text", @placeholder = "date début (DD/MM/YY)" })
                                            <div class="col-md-10">
                                                @Html.ValidationMessageFor(model => model.date_i, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                               
                        <tr>

                            <td>
                                <div class="form-group marr">
                                    @Html.TextBoxFor(model => model.date_f, htmlAttributes: new { @class = "form__input", @type = "text", @placeholder = "date fin (DD/MM/YY)" })
                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(model => model.date_f, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>

                            <td>
                                <div class="form-group marr">
                                    @Html.TextBoxFor(model => model.description, htmlAttributes: new { @class = "form__input", @placeholder = "Description de l'offre" })
                                    <div class="col-md-10">

                                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group marr " >
                                    @Html.TextBoxFor(model => model.prix_offre, htmlAttributes: new { @class = "form__input", @type = "text", @placeholder = "Prix" })
                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(model => model.prix_offre, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>

                        </tr>
                        </table>

                        <script src="~/themelog/js/javascript.js"></script>
                        <div>
                            <div class="form-group" style="margin-left:220px">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Ajouter" class="form__button button submit" />
                                    <br />
                                    @ViewBag.error
                                </div>
                            </div>
                            <div class="form-group" style="margin-left:-5px;margin-top:-105px">
                                <div class="col-md-offset-2 col-md-10">
                                    <button class="form__button button submit">@Html.ActionLink("Retour ", "articleProp")</button>
                                    <br />
                                    @ViewBag.error
                                </div>
                            </div>
                        </div>

</div>
                    </form>
                </div>
                <div style="margin-left:-25px;margin-top:-24px">



                    <img src="~/Image/Capture.PNG" style="width: 440px; height: 600px" />




                </div>
            </div>

        </body>

    </body>
}